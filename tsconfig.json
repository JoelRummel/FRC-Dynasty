{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",
        "lib": [
            "es2021",
            "DOM"
        ],
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}